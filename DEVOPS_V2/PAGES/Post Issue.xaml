<Page x:Class="DEVOPS_V2.Post_Issue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DEVOPS_V2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Post_Issue">

    <Grid Background="White">
        <TextBox HorizontalAlignment="Left" Margin="10,43,0,0" Text="Judul" TextWrapping="Wrap" VerticalAlignment="Top" Width="521"/>
        <TextBox HorizontalAlignment="Left" Margin="10,72,0,0" Text="Deskripsikan permasalahan Anda" TextWrapping="Wrap" VerticalAlignment="Top" Width="521" Height="368" AcceptsReturn="True"/>
        <StackPanel HorizontalAlignment="Left" Margin="10,8,0,0" Orientation="Horizontal" VerticalAlignment="Top">
            <Label Margin="10,0,0,0" Content="Project" Height="26"  FontWeight="Bold"/>
            <ComboBox Margin="10,0" BorderThickness="0" Height="22" Width="120"/>
            <Label Margin="10,0,0,0" Content="Type" Height="26"  FontWeight="Bold"/>
            <ComboBox Margin="10,0" BorderThickness="0" Height="22" Width="120"/>
            <Button Margin="20,0" BorderThickness="0" Content="Post" Width="80" Height="24" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Page>
